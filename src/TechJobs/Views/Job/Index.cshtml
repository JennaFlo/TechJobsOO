@model TechJobs.ViewModels.SearchJobsViewModel

<!--*TODO #2.1- declare the ViewModel (outside of this @{ } block)-->
<h1>@ViewBag.Title</h1>


<table class="job-listing">
    @{
        // TODO #2.2 - display the job fields, one per row (outside of this @{ } block)
        foreach (var jobs in Model.Jobs)
        {
            <tr>
                <td>Name</td>
                <td>@jobs.Name</td>
            </tr>
            <tr>
                <td>Employer</td>
                <td>@jobs.Employer</td>
            </tr>
            <tr>
                <td>Location</td>
                <td>@jobs.Location</td>
            </tr>
            <tr>
                <td>Skill</td>
                <td>@jobs.CoreCompetency</td>
            </tr>
            <tr>
                <td>Position Type</td>
                <td>@jobs.PositionType</td>
            </tr>
        }
    }
</table>